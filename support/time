# ----------------------------------------------------------------------------------------
# PERIODIC TRIGGER TO MAIN LOOP
# ----------------------------------------------------------------------------------------
periodic_trigger (){
	#MQTT LOOP
	while : ; do 
		sleep 10
		echo "TIME" > main_pipe
	done
}